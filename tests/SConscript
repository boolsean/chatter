env = Environment()

env.Append(CCFLAGS=['-g'])
env.Append(CPPPATH=['../../calc'])
env.Append(CPPPATH=['../../nt'])
env.Append(CPPPATH=['../../data'])
env.Append(CPPPATH=['../../driver'])
env.Append(CPPPATH=['../../filler'])
env.Append(CPPPATH=['../../match'])

env.Append(LIBPATH=['../../nt/bin'])
env.Append(LIBPATH=['../../data/bin'])
env.Append(LIBPATH=['../../driver/bin'])
env.Append(LIBPATH=['../../filler/bin'])
env.Append(LIBPATH=['../../match/bin'])

env.Append(LIBS=['zmq', 'nt', 'data', 'driver', 'filler', 'match', 'boost_date_time'])



env.Program(target="testZmqServer.out", source=['testZmqServer.cpp'])
